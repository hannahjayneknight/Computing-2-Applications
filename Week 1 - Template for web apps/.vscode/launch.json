{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Program",
            "program": "${workspaceFolder}/web-app/server.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },

      {
        "name": "fx-dev debug",
        "type": "firefox",
        "request": "launch",
        "reAttach": true,
        "reloadOnAttach": true,
        "file": "${workspaceFolder}/web-app/static/index.html",
        "preferences": {
          "security.fileuri.strict_origin_policy": false
        }
      }

    ]
  }